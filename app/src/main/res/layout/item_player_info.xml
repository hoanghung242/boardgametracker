<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.player.name.text"
                android:text="Monopoly" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/player_game_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.player.description.text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="123123"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/player_last_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.home.game.description.text"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="24/02/2002" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>