<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_standard_margin"
    android:layout_marginStart="@dimen/activity_standard_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/player_rank"
            style="@style/AppTheme.game_finish.player_icon_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_shape_background"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/player_name"
            style="@style/AppTheme.game_finish.player_name.text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_weight="1.0" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/player_score"
            style="@style/AppTheme.game_finish.player_score.text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin" />

    </LinearLayout>

    <include layout="@layout/divider_line" />

</LinearLayout>